<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        >
        <ImageView
            android:id="@+id/icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/tv_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_black" />
            <LinearLayout
                android:id="@+id/ll_subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/tv_task_name"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/process_now"/>
                <TextView
                    android:id="@+id/tv_process_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTheme"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_percentage"
                android:layout_below="@id/ll_subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/process_percentage"/>
                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTheme"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_task_type"
                android:layout_below="@id/ll_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/task_type"/>
                <TextView
                    android:id="@+id/tv_task_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTheme"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_recommend_name"
                android:layout_below="@id/ll_task_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/recommend"/>
                <TextView
                    android:id="@+id/tv_recommend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTheme"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_apply_money"
                android:layout_below="@id/ll_recommend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/apply_money"/>
                <TextView
                    android:id="@+id/tv_apply_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTheme"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/ll_apply_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"
                    android:text="@string/sponsor"/>
                <TextView
                    android:id="@+id/tv_sponsor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorTheme"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>

        </RelativeLayout>
        <Button
            android:id="@+id/bt_check"
            android:layout_width="42dp"
            android:layout_height="24dp"
            android:background="@drawable/selector_bt_check"
            android:textSize="12sp"
            android:textColor="@drawable/selector_text_bt"
            android:text="查看"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>