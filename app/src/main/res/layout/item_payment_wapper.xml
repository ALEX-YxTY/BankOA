<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--还款时间1*-->
    <LinearLayout
        android:id="@+id/ll_payment_time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/selector_et_border">
        <TextView
            android:id="@+id/tv_timeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/text_comment"
            />
        <TextView
            android:id="@+id/tv_payment_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/text_comment"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="请选择"
            android:textColorHint="@color/text_gray2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_choose"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <!--还款金额*1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/selector_et_border">
        <TextView
            android:id="@+id/tv_moneyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/text_comment"
            />
        <EditText
            android:id="@+id/et_payment_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            style="@style/text_comment"
            android:singleLine="true"
            android:hint="请输入金额"
            android:inputType="numberDecimal"
            android:textColorHint="@color/text_gray2"/>

    </LinearLayout>

</LinearLayout>