<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--还款时间1*-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        >

        <ImageView
            android:id="@+id/choose1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_choose_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/selector_et_border"
            android:layout_toLeftOf="@id/choose1"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_payment_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/text_comment"
                android:text="还款时间1*"
                />
            <TextView
                android:id="@+id/tv_payment_time1_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                style="@style/text_comment"
                android:singleLine="true"
                android:ellipsize="end"
                />

        </LinearLayout>

    </RelativeLayout>

    <!--还款金额*1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        >

        <ImageView
            android:id="@+id/choose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_choose_icon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/selector_et_border"
            android:layout_toLeftOf="@id/choose2"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_payment_money1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="还款金额1*"
                style="@style/text_comment"
                />
            <TextView
                android:id="@+id/tv_payment_money1_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                style="@style/text_comment"
                android:singleLine="true"
                android:ellipsize="end"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>