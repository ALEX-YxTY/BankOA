<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogNoAction" parent="Theme.AppCompat.Light.Dialog" >
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="sub_main_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_gray2</item>
    </style>
    <style name="main_process_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>
    <style name="sub_process_text_finish">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#15d5c8</item>
    </style>
    <style name="sub_process_text_unfinish">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#9ca7b2</item>
    </style>
    <style name="text_percentage">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9ca7b2</item>
    </style>
    <style name="text_percentage_theme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="text_comment">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>
    <style name="text_comment_blue">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="text_subTitle_blue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="text_title_blue">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

    <style name="bt_enter" >
        <item name="android:textColor" >@color/white</item>
        <item name="android:textSize" >20sp</item>
        <item name="android:layout_width" >match_parent</item>
        <item name="android:layout_height" >42dp</item>
        <item name="android:layout_marginLeft" >12dp</item>
        <item name="android:layout_marginRight" >12dp</item>
        <item name="android:layout_marginBottom" >27dp</item>
        <item name="android:background" >@drawable/selector_bt_clickable</item>
        <item name="android:layout_alignParentBottom" >true</item>
    </style>

    <!--custom dialog-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!--无标题-->
    </style>
</resources>
